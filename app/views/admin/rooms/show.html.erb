
<% if @room.attachments? %>
<ul>
  <% @room.attachments.each do |attachment| %>
    <%= link_to(image_tag(attachment.large.url, alt: 'Image'), attachment.url, target: '_blank') %>
  <% end %>
</ul>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @room.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @room.description %>
</p>
<p>
  <strong>Price:</strong>
  <%= "#{@room.price} $/day" %>
</p>

<p>
  <strong>Body:</strong>
  <%= @room.body %>
</p>


<%= link_to 'Edit', edit_admin_room_path(@room) %> |

<%= link_to 'Destroy', admin_room_path(@room), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', admin_rooms_path %>
