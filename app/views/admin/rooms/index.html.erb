<h1>Rooms</h1>

<%= link_to 'Add new room', new_admin_room_path(@room) %></td>
<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Created</th>
      <th>Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.created_at %></td>
        <td><%= room.updated_at %></td>
        <td><%= link_to 'Destroy', admin_room_path(room), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Edit', edit_admin_room_path(room) %></td>
      </tr>
    <% end %>
  </tbody>
</table>